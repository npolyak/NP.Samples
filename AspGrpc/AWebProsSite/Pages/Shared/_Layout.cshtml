<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AWebProsSite</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AWebProsSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"
             style="margin-right:0px;margin-left:0px;max-width:9999px">
            <div class="container" style="margin-right:0px;margin-left:0px;max-width:9999px">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"
                     style="margin-left:20px;margin-right:20px">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="color:dodgerblue;font-weight:400;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;align-content:center;font-size:22px;margin-bottom:6px;margin-right:30px">
                            AWebPros.com
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Showcase">Samples</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Samples">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-right:0px;margin-left:20px;margin-right:20px;max-width:9999px">
        <main role="main" class="pb-3" style="align-self:stretch;margin-right:0px;margin-left:0px">
            <div>
                <img width="100px"
                     height="100px"
                     src="assets/WindowsIcon.png"
                     style="margin-right:40px;margin-top:40px"/>
                <img width="100px"
                     height="100px"
                     src="assets/MacIcon.png" 
                     style="margin-right:40px;margin-top:40px" />
                <img width="100px"
                     height="100px"
                     src="assets/LinuxIcon.png" 
                     style="margin-right:40px;margin-top:40px" />
                <img width="100px"
                     height="100px"
                     src="assets/IPhoneIcon.png" 
                     style="margin-right:40px;margin-top:40px" />
                <img width="100px"
                     height="100px"
                     src="assets/Android.png"
                     style="margin-top:40px" />
            </div>
            @RenderBody()
        </main>
    </div>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AWebProsSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
