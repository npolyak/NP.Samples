<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AWebProsSite</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="modulepreload" href="~/mainForAvalonia.js" />
    <link rel="modulepreload" href="~/_framework/dotnet.js" />
    <link rel="modulepreload" href="~/_framework/avalonia.js" />
    <link rel="stylesheet" href="~/app.css" />
    <link rel="stylesheet" href="~/AWebProsSite.styles.css" asp-append-version="true" />
</head>
<body style="display:grid">
   <header>
        <nav class="navbar navbar-expand-md sticky-top"
             style="margin-right:0px;margin-left:0px;width:100%;background-color:white">
            <div class="container" style="margin-right:0px;margin-left:0px">
                <div style="margin-left:20px;margin-right:20px">
                    <ul class="navbar-nav text-sm-wrap flex-sm-wrap">
                        <li class="nav-item" style="color:dodgerblue;font-weight:400;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;align-content:center;font-size:22px;margin-bottom:6px;margin-right:30px">
                            AWebPros.com
                        </li>
                        <li class="nav-item">
                            <a class="nav-link top-level-nav-link" asp-area="" asp-page="/Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link top-level-nav-link" asp-area="" asp-page="/OnLineSamples">Samples</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link top-level-nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="display:grid;margin-top:20px;margin-left:20px;margin-right:20px;">
        <div>
            <img width="100px"
                 height="100px"
                 src="/assets/WindowsIcon.png"
                 style="margin-right:40px;margin-top:40px" />
            <img width="100px"
                 height="100px"
                 src="/assets/MacIcon.png"
                 style="margin-right:40px;margin-top:40px" />
            <img width="100px"
                 height="100px"
                 src="/assets/LinuxIcon.png"
                 style="margin-right:40px;margin-top:40px" />
            <img width="100px"
                 height="100px"
                 src="/assets/IPhoneIcon.png"
                 style="margin-right:40px;margin-top:40px" />
            <img width="100px"
                 height="100px"
                 src="/assets/Android.png"
                 style="margin-top:40px" />
        </div>
        <main role="main" class="pb-3" style="align-self:stretch;margin-right:0px;margin-left:0px">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script language="javascript">
        $(document).ready(function(){
            var path = window.location.pathname;

            var current = path.substring(path.lastIndexOf('/')+1);

            $("a.top-level-nav-link").each(function(item) {
                var urlSegment = $(this).attr('href').lastIndexOf('/') + 1;
                var urlPath = $(this).attr('href').substring(urlSegment)


                if (current == urlPath)
                {
                    $("a.list-group-item.active").removeClass('active')
                    $(this).addClass('active')
                }
            })
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
